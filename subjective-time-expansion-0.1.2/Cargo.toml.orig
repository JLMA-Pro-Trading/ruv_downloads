[package]
name = "subjective-time-expansion"
version = "0.1.2"
description = "Subjective Time Expansion for AI Consciousness - A breakthrough framework enabling individual agents to experience dilated time perception for enhanced cognitive processing"
authors = ["rUv <ruv@ruv.io>"]
license = "MIT OR Apache-2.0"
edition = "2021"
repository = "https://github.com/ruvnet/sublinear-time-solver"
homepage = "https://github.com/ruvnet/sublinear-time-solver"
documentation = "https://docs.rs/subjective-time-expansion"
keywords = ["ai", "consciousness", "temporal", "cognitive", "simulation"]
categories = ["science", "simulation", "algorithms"]
readme = "README.md"
exclude = ["*.png", "*.jpg", "*.gif"]

[lib]
name = "subjective_time_expansion"
path = "src/lib.rs"
crate-type = ["cdylib", "rlib"]

[[example]]
name = "basic_expansion"
path = "examples/basic_expansion.rs"

[[example]]
name = "phi_measurement"
path = "examples/phi_measurement.rs"

[[bench]]
name = "temporal_benchmark"
path = "benches/temporal_benchmark.rs"
harness = false

[dependencies]
tokio = { version = "1.38", features = ["full"] }
nalgebra = "0.33"
rand = "0.8"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
thiserror = "2.0"
tracing = "0.1"
tracing-subscriber = "0.3"
num-traits = "0.2"
rayon = "1.7"
dashmap = "6.0"
crossbeam = "0.8"
strange-loop = "0.3.0"

# Optional WASM support
wasm-bindgen = { version = "0.2", optional = true }
web-sys = { version = "0.3", optional = true }
js-sys = { version = "0.3", optional = true }
console_error_panic_hook = { version = "0.1", optional = true }
wasm-logger = { version = "0.2", optional = true }

[dev-dependencies]
criterion = { version = "0.5", features = ["html_reports"] }
proptest = "1.0"
tokio-test = "0.4"
futures = "0.3"

[features]
default = ["full"]
full = ["wasm", "advanced-cognition"]
wasm = ["dep:wasm-bindgen", "dep:web-sys", "dep:js-sys", "dep:console_error_panic_hook", "dep:wasm-logger"]
advanced-cognition = []
simd = []

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"

[profile.bench]
opt-level = 3
debug = true
[package]
name = "temporal-attractor-studio"
version = "0.1.0"
description = "Temporal Attractor Studio - Real FTLE calculation and temporal dynamics prediction with VP-tree optimization"
authors = ["rUv <ruv@ruv.io>"]
license = "MIT OR Apache-2.0"
edition = "2021"
repository = "https://github.com/ruvnet/sublinear-time-solver"
homepage = "https://github.com/ruvnet/sublinear-time-solver"
documentation = "https://docs.rs/temporal-attractor-studio"
keywords = ["lyapunov", "chaos", "temporal", "attractor", "dynamics"]
categories = ["science", "mathematics", "algorithms"]
readme = "README.md"

[lib]
name = "temporal_attractor_studio"
path = "src/lib.rs"
crate-type = ["cdylib", "rlib"]

[[bin]]
name = "lyapfit"
path = "src/main.rs"

[[bin]]
name = "tas-cli"
path = "src/bin/cli.rs"

[[bin]]
name = "performance-test"
path = "src/bin/performance_test.rs"

[[example]]
name = "bridge_integration_test"
path = "examples/bridge_integration_test.rs"

[dependencies]
# Core dependencies from lyapfit
anyhow = "1.0"
clap = { version = "4.5", features = ["derive"] }
csv = "1.3"
rayon = "1.10"

# Matrix operations
ndarray = { version = "0.16", features = ["rayon"] }
nalgebra = "0.33"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Error handling and logging
thiserror = "2.0"
tracing = "0.1"
tracing-subscriber = "0.3"
chrono = { version = "0.4", features = ["serde"] }
num_cpus = "1.0"
rand = "0.8"

# Async and concurrency
tokio = { version = "1.38", features = ["full"] }

# Math and randomness
num-traits = "0.2"

# Subjective time expansion integration
subjective-time-expansion = "0.1.0"

# Performance optimizations
dashmap = "6.0"
crossbeam = "0.8"

[dev-dependencies]
criterion = { version = "0.5", features = ["html_reports"] }
proptest = "1.0"
tokio-test = "0.4"
futures = "0.3"

[[bench]]
name = "real_performance_benchmark"
path = "benches/real_performance_benchmark.rs"
harness = false

[[bench]]
name = "echo_state_benchmark"
path = "benches/echo_state_benchmark.rs"
harness = false

[features]
default = []
simd = []
gpu = []
advanced = ["simd", "gpu"]

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"

[profile.bench]
opt-level = 3
debug = true
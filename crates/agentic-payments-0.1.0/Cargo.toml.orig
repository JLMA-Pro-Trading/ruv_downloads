[workspace]
# This crate is a standalone workspace

[package]
name = "agentic-payments"
version = "0.1.0"
edition = "2021"
authors = ["Agentic Catalog Team"]
description = "Autonomous multi-agent Ed25519 signature verification with Byzantine fault tolerance"
license = "MIT OR Apache-2.0"
repository = "https://github.com/agentic-catalog/agentic-payments"
keywords = ["ed25519", "signatures", "agents", "consensus", "ap2"]
categories = ["cryptography", "authentication", "concurrency"]

[lib]
crate-type = ["cdylib", "rlib"]

[dependencies]
# Cryptography
ed25519-dalek = { version = "2.1", features = ["serde", "batch"] }
ed25519 = "2.2"
rand = "0.8"
getrandom = { version = "0.2", features = ["js"] }
zeroize = { version = "1.7", features = ["derive"] }
sha2 = "0.10"
hex = "0.4"

# Async runtime (not all features available in WASM)
tokio = { version = "1.35", features = ["full"], optional = true }
tokio-util = { version = "0.7", optional = true }
futures = "0.3"
async-trait = "0.1"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
base64 = "0.22"
base64-url = "3.0"

# PKCS#8 Support
pkcs8 = { version = "0.10", features = ["pem"] }

# DID/VC support (not available in WASM)
did-key = { version = "0.2", optional = true }
ssi = { version = "0.7", optional = true }

# Error handling
thiserror = "1.0"
anyhow = "1.0"

# Distributed systems
dashmap = "5.5"
parking_lot = "0.12"

# UUID
uuid = { version = "1.6", features = ["v4", "serde", "js"] }

# Time
chrono = { version = "0.4", features = ["serde"] }

# Metrics
metrics = "0.21"
metrics-exporter-prometheus = { version = "0.13", optional = true }

# Webhook dependencies (ACP)
tokio-retry = { version = "0.3", optional = true }
reqwest = { version = "0.11", features = ["json"], optional = true }
hmac = { version = "0.12", optional = true }

# WASM support
wasm-bindgen = { version = "0.2", optional = true }
wasm-bindgen-futures = { version = "0.4", optional = true }
js-sys = { version = "0.3", optional = true }
web-sys = { version = "0.3", features = ["console"], optional = true }
serde-wasm-bindgen = { version = "0.6", optional = true }
console_error_panic_hook = { version = "0.1", optional = true }
console_log = { version = "1.0", optional = true }

# Logging
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }

# HTTP/REST for ACP (optional, feature-gated)
axum = { version = "0.7", optional = true }
tower = { version = "0.4", optional = true }
tower-http = { version = "0.5", features = ["trace", "cors"], optional = true }
hyper = { version = "1.0", optional = true }
utoipa = { version = "4.0", optional = true }
utoipa-swagger-ui = { version = "6.0", features = ["axum"], optional = true }

[dev-dependencies]
tokio-test = "0.4"
criterion = { version = "0.5", features = ["async_tokio"] }
proptest = "1.4"
test-case = "3.3"
wasm-bindgen-test = "0.3"

[features]
default = ["full"]
full = ["metrics-support", "did-support", "async-runtime", "acp"]
metrics-support = ["dep:metrics-exporter-prometheus"]
did-support = ["dep:did-key", "dep:ssi"]
async-runtime = ["dep:tokio", "dep:tokio-util"]
acp = ["dep:tokio-retry", "dep:reqwest", "dep:hmac", "dep:axum", "dep:tower", "dep:tower-http", "dep:hyper", "dep:utoipa", "dep:utoipa-swagger-ui", "async-runtime"]
acp-wasm = ["acp", "wasm"]
wasm = [
    "dep:wasm-bindgen",
    "dep:wasm-bindgen-futures",
    "dep:js-sys",
    "dep:web-sys",
    "dep:serde-wasm-bindgen",
    "dep:console_error_panic_hook",
    "dep:console_log",
]

[[bench]]
name = "acp_benchmark"
harness = false
required-features = ["acp"]


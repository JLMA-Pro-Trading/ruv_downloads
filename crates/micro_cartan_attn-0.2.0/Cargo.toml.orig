[package]
name = "micro_cartan_attn"
version = "0.2.0"
edition = "2021"
authors = ["Neuro-Synaptic Simulator Team"]
license = "MIT OR Apache-2.0" 
repository = "https://github.com/ruvnet/ruv-FANN"
keywords = ["neural-networks", "attention", "cartan-matrix", "orthogonal"]
categories = ["science", "mathematics"]
description = "Complete Cartan matrix attention mechanisms with proper Lie algebra structures"
exclude = ["target/", "target_standalone/", "Cargo.lock", "tests/"]

[dependencies]
# Standalone version - no micro_core dependency
serde = { version = "1.0", default-features = false, features = ["derive", "alloc"], optional = true }
serde_json = { version = "1.0", default-features = false, features = ["alloc"], optional = true }
nalgebra = { version = "0.33", default-features = false, features = ["alloc"] }
num-traits = { version = "0.2", default-features = false }
libm = { version = "0.2", default-features = false }

[features]
default = ["gram-schmidt"]
std = ["serde?/std", "serde_json?/std", "nalgebra/std", "num-traits/std"]
serde = ["dep:serde", "dep:serde_json"]
gram-schmidt = []
training = []
simd = []
analysis = []
blas = []

[dev-dependencies]
criterion = { version = "0.5", features = ["html_reports"] }
quickcheck = "1.0"
approx = "0.5"

# Standalone crate configuration
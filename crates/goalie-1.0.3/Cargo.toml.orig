[package]
name = "goalie"
version = "1.0.3"
edition = "2021"
description = "ðŸŽ¯ AI-powered research assistant with GOAP planning, advanced reasoning, MCP protocol support, and Perplexity API integration - Rust wrapper for goalie npm package"
license = "MIT"
repository = "https://github.com/ruvnet/goalie"
keywords = ["mcp", "goap", "planning", "ai", "perplexity"]
categories = ["command-line-utilities", "development-tools"]
authors = ["rUv <hello@ruv.net>"]
readme = "README.md"

[[bin]]
name = "goalie"
path = "src/main.rs"

[dependencies]
clap = { version = "4.0", features = ["derive"] }
tokio = { version = "1.0", features = ["full"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
anyhow = "1.0"

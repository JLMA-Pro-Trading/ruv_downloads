[package]
name = "neurodna"
version = "0.0.2"
edition = "2021"
description = "High-performance evolutionary neural networks with genetic encoding, SIMD optimizations, and neurodivergent cognitive modeling"
license = "MIT"
repository = "https://github.com/ruvnet/ruv-FANN"
keywords = ["neural-networks", "evolution", "ai", "genetics", "neurodivergent"]
categories = ["science", "simulation", "algorithms"]

[dependencies]
# Core dependencies
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
rand = { version = "0.8", features = ["small_rng"] }
getrandom = { version = "0.2", features = ["js"] }
chrono = { version = "0.4", features = ["serde"] }

# For plotting and visualization
plotters = { version = "0.3", optional = true }

# For WASM support
wasm-bindgen = { version = "0.2", optional = true }
web-sys = { version = "0.3", optional = true }
js-sys = { version = "0.3", optional = true }
serde-wasm-bindgen = { version = "0.4", optional = true }
wee_alloc = { version = "0.4", optional = true }
console_error_panic_hook = { version = "0.1", optional = true }

# For integration with ruv-FANN
# (These would be uncommented when the main crate structure is finalized)
# ruv-fann = { path = "../", optional = true }

[dev-dependencies]
# Additional dependencies for testing
criterion = { version = "0.5", features = ["html_reports"] }
proptest = "1.0"
tempfile = "3.0"

[features]
default = ["plotting"]
plotting = ["plotters"]
wasm = ["dep:wasm-bindgen", "dep:web-sys", "dep:js-sys", "dep:serde-wasm-bindgen", "dep:wee_alloc", "dep:console_error_panic_hook"]
# fann-integration = ["ruv-fann"]
benchmarks = []

[lib]
name = "neurodna"
path = "src/lib.rs"
crate-type = ["cdylib", "rlib"]

[[bin]]
name = "dna-train"
path = "cli/dna-train.rs"
required-features = []

[[bin]]
name = "dna-spawn"
path = "cli/dna-spawn.rs"
required-features = []

[[bin]]
name = "dna-score"
path = "cli/dna-score.rs"
required-features = []


[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"

[profile.test]
opt-level = 1

[[bench]]
name = "evolution_benchmarks"
harness = false
required-features = ["benchmarks"]

[package.metadata.docs.rs]
all-features = true
rustdoc-args = ["--cfg", "docsrs"]
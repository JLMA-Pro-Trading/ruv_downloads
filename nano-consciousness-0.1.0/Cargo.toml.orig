[package]
name = "nano-consciousness"
version = "0.1.0"
edition = "2021"
authors = ["rUv <hello@ruv.io>"]
description = "High-performance consciousness-inspired AI framework with nanosecond scheduling and temporal processing"
license = "MIT OR Apache-2.0"
repository = "https://github.com/ruvnet/sublinear-time-solver"
homepage = "https://github.com/ruvnet/sublinear-time-solver/tree/main/examples/nano-consciousness"
documentation = "https://docs.rs/nano-consciousness"
readme = "README.md"
keywords = ["consciousness", "ai", "neural-network", "temporal", "real-time"]
categories = ["science", "algorithms", "simulation", "wasm", "embedded"]

[lib]
name = "nano_consciousness"
crate-type = ["cdylib", "rlib"]

[dependencies]
# Core numerical computing
ndarray = { version = "0.15", features = ["rayon"] }
rayon = "1.7"
num-traits = "0.2"
num-complex = "0.4"

# Serialization and data handling
serde = { version = "1.0", features = ["derive"] }
serde_json = { version = "1.0", optional = true }

# Random number generation
rand = "0.8"
rand_distr = "0.4"

# Logging and error handling
thiserror = "1.0"
log = "0.4"

# Time and scheduling
parking_lot = "0.12"
crossbeam = "0.8"

# Mathematical operations
nalgebra = "0.32"
approx = "0.5"

# WebAssembly support
wasm-bindgen = { version = "0.2", optional = true }
js-sys = { version = "0.3", optional = true }
web-sys = { version = "0.3", optional = true }

# WASM specific dependencies
[target.'cfg(target_arch = "wasm32")'.dependencies]
getrandom = { version = "0.2", features = ["js"] }
console_error_panic_hook = "0.1"
serde-wasm-bindgen = "0.4"

[dev-dependencies]
criterion = { version = "0.5", features = ["html_reports"] }
env_logger = "0.10"
approx = "0.5"

[features]
default = ["std"]
std = []
wasm = ["wasm-bindgen", "js-sys", "web-sys"]
metrics = ["serde_json"]

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"

[profile.dev]
opt-level = 1
debug = true

[[bench]]
name = "consciousness_benchmarks"
harness = false

[[bench]]
name = "neural_benchmarks"
harness = false

[[bench]]
name = "temporal_benchmarks"
harness = false

[package.metadata.wasm-pack.profile.release]
wee-alloc = false

[package]
name = "nanosecond-scheduler"
version = "0.1.1"
edition = "2021"
authors = ["rUv <https://github.com/ruvnet>"]
license = "MIT OR Apache-2.0"
description = "Ultra-low latency nanosecond-precision scheduler for temporal consciousness applications"
repository = "https://github.com/ruvnet/sublinear-time-solver"
keywords = ["scheduler", "nanosecond", "temporal", "consciousness", "wasm"]
categories = ["algorithms", "concurrency", "wasm", "science"]

[lib]
crate-type = ["cdylib", "rlib"]

[dependencies]
# Core dependencies
crossbeam-channel = "0.5"
parking_lot = "0.12"
ahash = "0.8"
smallvec = "1.11"

# WASM support
cfg-if = "1.0"
getrandom = { version = "0.2", features = ["js"] }

# Optional dependencies
serde = { version = "1.0", features = ["derive"], optional = true }
bincode = { version = "1.3", optional = true }

[target.'cfg(target_arch = "wasm32")'.dependencies]
wasm-bindgen = { version = "0.2", optional = true }
web-sys = { version = "0.3", features = ["Performance", "Window"], optional = true }
js-sys = { version = "0.3", optional = true }
serde-wasm-bindgen = { version = "0.6", optional = true }

[target.'cfg(not(target_arch = "wasm32"))'.dependencies]
rayon = { version = "1.7", optional = true }

[dev-dependencies]
criterion = "0.5"
proptest = "1.4"
approx = "0.5"

[features]
default = ["std"]
std = []
serde = ["dep:serde", "dep:bincode"]
parallel = ["rayon"]
simd = []

# WASM features
wasm = ["wasm-bindgen", "web-sys", "js-sys", "serde-wasm-bindgen", "serde", "getrandom/js"]

[[bench]]
name = "scheduler_benchmarks"
harness = false

[profile.release]
lto = true
opt-level = 3
codegen-units = 1
panic = "abort"

[profile.wasm]
inherits = "release"
opt-level = "z"  # Optimize for size in WASM